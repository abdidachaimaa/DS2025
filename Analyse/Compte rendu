  "data_json": "[{\"study_load\":1,\"stress\":2},{\"study_load\":2,\"stress\":2.5},{\"study_load\":3,\"stress\":3.2},{\"study_load\":4,\"stress\":3.8},{\"study_load\":5,\"stress\":4.2}]",
